{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "types": ["node", "@wdio/globals/types", "@wdio/mocha-framework"],
    "baseUrl": "./"
  },
  "include": [
    "web/**/*",
    "api/**/*",
    "mobile/**/*",
    "utils/**/*",
    "playwright.config.ts",
    "wdio.conf.js"
  ]
}